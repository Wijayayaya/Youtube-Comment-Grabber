[Unit]
Description=YouTube Chat Dashboard
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/youtube_chat_dashboard/current
Environment=PYTHONUNBUFFERED=1
ExecStart=/var/www/youtube_chat_dashboard/current/.venv/bin/gunicorn --workers 3 --bind 0.0.0.0:8000 dashboard.wsgi:application
Restart=on-failure

[Install]
WantedBy=multi-user.target
